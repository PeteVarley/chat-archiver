<div class="row">
  <div class="large-12 columns"><h1>Welcome to Chat Archiver</h1></div>
  <div class="large-12 columns">
    <div class="panel">
      <p>Home page</p>
      <p>Team <%= @team %></p>
      <p>Team ID <%= @team_id %></p>
      <p><%= @user %></p>
      <p><%= @first_name %></p>


      <%= @team_id %>
      <form name ="new_archive" action="/chats" method="post" accept-charset="utf-8">
          <label>Channel options
            <select name="channel"> Select channel
              <% @names.length.times do |channel_number| %>
                <% @names[channel_number] %>
                <% value = @names[channel_number] %>
                <% name = value["name"] %>
                <% @id = value["id"] %>
                  <option value=<%= @id %>> <%= name %> </option>
              <% end %>
             </select>
          </label>
          <p><%= @token %></p>

          <input type= "hidden" name="team" value=<%= @team %> >

          <input type= "hidden" name="team_id" value=<%= @team_id %> >

          <input type="text" name="number[chat_number]" placeholder="How many messages would you like to archive?">

          <input type="submit" class="small success button" value="Archive">

        </form>

      <p><%= @token %></p>
    </div>
  </div>
</div>
<script src="js/vendor/jquery.js"></script>
<script src="js/foundation.min.js"></script>
<script>
  $(document).foundation();
</script>